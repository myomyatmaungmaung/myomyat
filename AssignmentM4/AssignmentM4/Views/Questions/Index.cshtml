@using AssignmentM4.Models
@using AssignmentM4.Controllers
@model IEnumerable<AssignmentM4.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QusText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkinType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QusText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkinType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Qid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Qid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Qid })
        </td>
    </tr>
}

</table>

